{
  "name": "partyplay-server",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "concurrently": "^4.0.1",
    "graphql": "^14.0.2",
    "graphql-tools": "^4.0.2",
    "graphql-yoga": "^1.16.7",
    "nodemon": "^1.18.4",
    "prisma-client-lib": "^1.18.1"
  },
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-sass && npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist/index.js",
    "schema:download": "apollo schema:download --endpoint=http://localhost:4000",
    "watch-node": "dotenv -- nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "devDependencies": {
    "prettier": "1.14.3",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.3"
  }
}
